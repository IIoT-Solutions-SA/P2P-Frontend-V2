# Container Networking
COMPOSE_PROJECT_NAME=p2p-sandbox

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=p2p_sandbox

# MongoDB Configuration
MONGO_DB_NAME=p2p_sandbox

# Backend Configuration (uses container names for internal networking)
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/p2p_sandbox
MONGODB_URL=mongodb://mongodb:27017/p2p_sandbox
SUPERTOKENS_CONNECTION_URI=http://supertokens:3567

# Backend Server Configuration
DEBUG=True
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1
PROJECT_NAME=P2P Sandbox
VERSION=0.1.0

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:5173,http://frontend:5173,http://localhost:3000

# Frontend Configuration (uses localhost for browser access)
VITE_API_BASE_URL=http://localhost:8000
VITE_SUPERTOKENS_API_DOMAIN=http://localhost:8000
VITE_SUPERTOKENS_API_BASE_PATH=/auth
VITE_WEBSITE_DOMAIN=http://localhost:5173
VITE_APP_NAME=P2P Sandbox
VITE_APP_VERSION=0.1.0
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Email Configuration (for development - optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@p2psandbox.com
EMAILS_FROM_NAME=P2P Sandbox

# Development Settings
NODE_ENV=development
PYTHONUNBUFFERED=1
RELOAD=True
WORKERS=1