# Application Settings
DEBUG=True
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1
PROJECT_NAME="P2P Sandbox"
VERSION=0.1.0
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://p2p_user:p2p_password@postgres:5432/p2p_sandbox
POSTGRES_SERVER=postgres
POSTGRES_USER=p2p_user
POSTGRES_PASSWORD=p2p_password
POSTGRES_DB=p2p_sandbox
POSTGRES_PORT=5432

# MongoDB Configuration
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=p2p_sandbox

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# SuperTokens Configuration
SUPERTOKENS_CONNECTION_URI=http://supertokens:3567
SUPERTOKENS_API_KEY=your-supertokens-api-key
SUPERTOKENS_APP_NAME=P2P Sandbox
SUPERTOKENS_API_DOMAIN=http://localhost:8000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:5173

# Email Configuration (for development)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@p2psandbox.com
EMAILS_FROM_NAME="P2P Sandbox"

# AWS S3 Configuration (optional for development)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=p2p-sandbox-dev

# Security
ALLOWED_HOSTS=["localhost","127.0.0.1"]
SENTRY_DSN=

# Development Tools
RELOAD=True
WORKERS=1